<h1>New Event Form</h1>

  
<%= form_for @event do |f| %>
  
  <%= f.label 'Date:' %>
  <%= f.date_select :date, start_year: 1800, end_year: 2030 %>

  <%= f.label 'Event Title:' %>
  <%= f.text_field :title %><br><br>
  
  <%= f.label 'Description:' %>
  <%= f.text_area :description %><br><br>

  <%= f.submit "Submit" %>

  <%= link_to "Home", users_path %>
<% end %>

